<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorBackground</item>
    </style>

    <!-- â€“ Set parent theme as app theme. -->
    <style name="DialogTheme" parent="BaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BigText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_48</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="Text.12" parent="Text">
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="Text.12.Hint">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="Text.18" parent="Text">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="Text.24" parent="Text">
        <item name="android:textSize">@dimen/font_24</item>
    </style>

    <style name="Text.24.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="hintEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/colorPrimary</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/colorHint</item>
        <item name="android:textAppearance">@style/Text</item>
    </style>

    <style name="TextInputLayoutDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="hintEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/colorPrimary</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/colorHint</item>
        <item name="android:textAppearance">@style/Text</item>
    </style>


    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DialogCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay</item>
    </style>

    <style name="ShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/card_view_corner</item>
        <item name="cornerSizeTopLeft">@dimen/card_view_corner</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>