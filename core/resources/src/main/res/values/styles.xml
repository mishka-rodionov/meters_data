<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="Text.12" parent="Text">
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="Text.12.Hint">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="Text.18" parent="Text">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="TextInputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">@dimen/text_input_layout_standard</item>
        <item name="android:layout_width">0dp</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/colorHint</item>
        <item name="android:textAppearance">@style/Text</item>
    </style>


    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>